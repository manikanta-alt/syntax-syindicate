<body>
  <div class="container">
    <div class="header">
      <h1>ðŸŽ¯ VidyaGuide AI Agent</h1>
      <p>Career Planning & Resume Mentor for Indian CS Students</p>
      <div class="stats">
        <div class="stat"><div class="stat-number">10M+</div>CS Students</div>
        <div class="stat"><div class="stat-number">â‚¹8-15L</div>Avg SWE Salary</div>
        <div class="stat"><div class="stat-number">70%</div>Tier-2 Grads</div>
      </div>
    </div>
    
    <div id="chat"></div>
    
    <div class="quick-buttons" id="quickButtons"></div>
    
    <div class="input-area">
      <input type="text" id="userInput" placeholder="Tell me about your skills, education, or say 'generate resume'..." />
      <button onclick="sendMessage()">Send</button>
    </div>
    
    <div class="resume-preview" id="resumePreview">
      <strong>ðŸ“„ YOUR GENERATED RESUME</strong>
      <div id="resumeContent"></div>
    </div>
  </div>

  <script>
    const chat = document.getElementById('chat');
    const userInput = document.getElementById('userInput');
    const quickButtons = document.getElementById('quickButtons');
    const resumePreview = document.getElementById('resumePreview');
    const resumeContent = document.getElementById('resumeContent');
    
    let profile = {
      name: 'Mani Kanta',
      location: 'Hyderabad',
      skills: [],
      education: [],
      interests: [],
      experience: []
    };
    
    const jobs = {
      'python': 'Python Developer (â‚¹10-18LPA)',
      'javascript': 'Frontend Engineer (â‚¹8-15LPA)',
      'ds': 'Data Structures â†’ SDE Interviews',
      'web': 'Full Stack Developer (â‚¹12-20LPA)',
      'startup': 'Product Engineer â†’ Equity offers'
    };
    
    function addMessage(text, isUser) {
      const div = document.createElement('div');
      div.className = `message ${isUser ? 'user' : 'agent'}`;
      div.innerHTML = `<div class="bubble">${text}</div>`;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }
    
    function showQuickButtons(options) {
      quickButtons.innerHTML = options.map(opt => 
        `<div class="quick-btn" onclick="quickReply('${opt}')">${opt}</div>`
      ).join('');
    }
    
    function quickReply(text) {
      userInput.value = text;
      sendMessage();
    }
    
    function generateResume() {
      const skillsStr = profile.skills.join(', ');
      const eduStr = profile.education.join('
');
      const resume = `# ${profile.name}
Hyderabad, Telangana | CS Student | LinkedIn

## ðŸŽ“ Education
${eduStr || 'Anveshana Certification (Data Structures)'}

## ðŸ’» Skills
${skillsStr || 'Python, DSA, Web Development'}

## ðŸš€ Career Path
${profile.interests.length ? profile.interests.join(', ') : 'Startups, Software Engineering'}

## ðŸŽ¯ Recommended Jobs
${Object.keys(jobs).filter(skill => 
  profile.skills.some(s => s.toLowerCase().includes(skill))
).map(skill => jobs[skill]).join('
') || jobs['python']}

*Generated by VidyaGuide AI Agent - Hackathon 2026*`;
      
      resumeContent.textContent = resume;
      resumePreview.style.display = 'block';
      resumePreview.scrollIntoView({ behavior: 'smooth' });
    }
    
    function sendMessage() {
      const msg = userInput.value.trim();
      if (!msg) return;
      
      addMessage(msg, true);
      userInput.value = '';
      quickButtons.innerHTML = '';
      
      setTimeout(() => {
        let response = "Got it! Tell me more about your skills or say 'generate resume'.";
        
        // Parse profile
        if (msg.toLowerCase().includes('anveshana') || msg.includes('cert')) {
          profile.education.push('Anveshana Certification - Data Structures & Algorithms');
          response = "âœ… Anveshana cert noted! Great for SDE interviews. What skills?";
        }
        if (msg.toLowerCase().includes('python') || msg.includes('js')) {
          profile.skills.push(msg.match(/python|javascript|js|web/gi)?.[0] || 'Python');
          response = `ðŸŽ‰ ${jobs['python']} fits you! Add more skills?`;
        }
        if (msg.toLowerCase().includes('startup')) {
          profile.interests.push('Startups');
          response = "ðŸš€ Perfect! Hyderabad startup scene is booming. Want equity-focused resume?";
        }
        if (msg.toLowerCase().includes('generate') || msg.includes('resume')) {
          response = "ðŸ“„ Generating your India-specific resume...";
          setTimeout(generateResume, 1000);
          return;
        }
        
        addMessage(response, false);
        showQuickButtons([
          'I know Python/DSA', 
          'Anveshana Certification', 
          'Startup interest', 
          'Generate resume',
          'Job suggestions'
        ]);
      }, 800);
    }
    
    // Start conversation
    addMessage("Hi Mani Kanta! ðŸ‘‹ I'm VidyaGuide, your career agent for Indian CS students. <br>Share your skills/education or click quick replies!", false);
    showQuickButtons(['CS Student Hyderabad', 'Anveshana Certification', 'Python/DSA skills', 'Startup career']);
    
    userInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') sendMessage();
    });
  </script>
</body>
